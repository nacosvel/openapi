{
    "name": "nacosvel/openapi",
    "description": "A lightweight OpenAPI HTTP kernel built on Guzzle, providing extensible request builders, endpoint chaining, and middleware pipelines.",
    "keywords": [
        "openapi",
        "http-client",
        "guzzle",
        "middleware",
        "sdk",
        "builder",
        "pipeline",
        "nacosvel"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/nacosvel/openapi",
    "authors": [
        {
            "name": "jundayw",
            "email": "jundayw@126.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.10",
        "guzzlehttp/uri-template": "^1.0",
        "nacosvel/support": "^2.0"
    },
    "require-dev": {
        "code-lts/doctum": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Nacosvel\\OpenAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "docs": "@php vendor/bin/doctum.php update doctum.php"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
